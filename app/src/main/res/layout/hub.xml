<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".Hub">

    <Button
        android:id="@+id/button_monday"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginBottom="568dp"
        android:fontFamily="@font/roboto"
        android:text="Понедельник"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Понедельник" />

    <Button
        android:id="@+id/button_tuesday"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginBottom="440dp"
        android:fontFamily="@font/roboto"
        android:text="Вторник"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Вторник" />

    <Button
        android:id="@+id/button_wednesday"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginBottom="320dp"
        android:fontFamily="@font/roboto"
        android:text="Среда"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Среда" />

    <Button
        android:id="@+id/button_thursday"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/roboto"
        android:text="Четверг"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Четверг" />

    <Button
        android:id="@+id/button_friday"
        android:layout_width="255dp"
        android:layout_height="84dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/roboto"
        android:text="Пятница"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Пятница" />


</androidx.constraintlayout.widget.ConstraintLayout>